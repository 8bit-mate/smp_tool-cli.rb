#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "./../lib/smp_tool/cli"

# DEBUG:
# ARGV = "i -i bin/smp0.bin".split(" ")

begin
  Dry::CLI.new(SMPTool::CLI::Commands).call
  exit 0
rescue StandardError => e
  logger = SMPTool::CLI::Logger.new
  logger.error(e.message)
  exit 1
end
